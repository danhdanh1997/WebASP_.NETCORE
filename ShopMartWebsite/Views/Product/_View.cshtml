@model ShopMartWebsite.Entities.Product
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="modal-content">
    <div class="card">
        <div class="card-header text-center font-weight-bold">
            Xem chi tiết sản phẩm
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row" style="font-size: 20px; font-family: 'Times New Roman', Times, serif;">
                    <div class="col-md-4" style="text-align: center; border-right: 1px solid #808080;">
                        <h3>Hình ảnh</h3>
                        <img src="~/images/site/@Model.image" width="200" />
                        
                    </div>
                    <br />
                    <div class="col-md-8">
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Tên sản phẩm:</strong>
                            <p class=" col-md-9">
                                @Model.name
                            </p>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Loại sản phẩm:</strong>
                            <p class=" col-md-9">
                                @if (@Model.category==null)
                                {

                                    
                                }
                                else {
                                    @Model.category.name
                                }
                            </p>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Giá:</strong>
                            <p class="col-md-9">
                                @Model.price VNĐ
                            </p>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Mô tả:</strong>
                            <textarea class="col-md-9" disabled style="border: 0px;">@Model.description</textarea>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Size:</strong>
                            <p class="col-md-9">
                                @Model.size
                            </p>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Màu sắc:</strong>
                            <p class="col-md-9">
                                @Model.color
                            </p>
                        </div>
                        
                        <div class="row" style=" margin: 10px 0;">
                            <strong class="col-md-3">Trạng thái:</strong>
                            <p class="col-md-9">
                                @Model.status
                            </p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    

</div>