@model ShopMartWebsite.Models.ForgotPasswordViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">
            Nhập Email của tài khoản

        </h5>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <!--Thêm value để Edit-->
        <form id="actionForm">

            <input type="hidden" name="ID" value="@Model.Email" />
            <div class="form-group col-md-12">

                <input class="form-control" name="Email" placeholder="Email..." value="@Model.Email">
            </div>



        </form>
        <div class="errorDiv">

        </div>
    </div>
    <div class="modal-footer">
        <button id="actionButton" type="button" class="btn btn-primary"><i class="fas fa-save mr-1"></i> Xác nhận</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Hủy</button>
    </div>
</div>
}
<script>
    //Create
    $('#actionButton').click(function () {
        console.log("co vo")
        $.ajax({
            url: '@Url.Action("ForgotPassword","Account")',
            type: 'post',
            data: $('#actionForm').serialize()
        }).done(function (response) {
            if (response.Success) {
                debugger;
                    swal({
                        title: "Chúc mừng!!!",
                        text: "Vui lòng vào Email để đổi mật khẩu!",
                        icon: "success",
                        buttons: "OK"

                    })
                        .then((willDelete) => {
                            location.reload();
                        });


                debugger;
            }
            else {
                swal({
                    title: "Thông báo!!!",
                    text: "Email không tồn tại!",
                    icon: "warning",
                    buttons: "OK"

                })
                    .then((willDelete) => {
                        location.reload();
                    });
            }
        });

    });

</script>